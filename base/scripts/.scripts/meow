# }}}

reset () {
  for x in {1..13}; do
    tput cuu1
    tput el
  done
}

# https://stackoverflow.com/questions/1809868/is-there-a-better-way-to-erase-a-line-than-echo
while :; do
  printf "${CAT}\n"
  sleep 0.6
  reset

  printf "${TAC}\n"
  sleep 0.6
  reset
done
