super+Print
    screenshot.sh



# music controls
super + shift + {Left , Right}
    mpvc { prev , next} &

# XF86AudioNext
XF86AudioNext
    mpvc next &

# XF86AudioPrev
XF86AudioPrev
    mpvc prev &

# XF86AudioPlay
XF86AudioPlay
    mpvc -p &

# XF86AudioPause
XF86AudioPause
    mpvc -p &

