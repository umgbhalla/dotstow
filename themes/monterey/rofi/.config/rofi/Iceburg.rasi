configuration {
	show-icons:                     true;
	icon-theme: 					"Iceburg";
	display-drun: 					"ï”º";
	drun-display-format:            "{name}";
	disable-history:                false;
	hide-scrollbar: 				true;
	sidebar-mode: 					false;
}

* {
	bg:                             #100c23;
	fg:                             #aaaaee;
	ac:                             #2212b2;

	background-color:               @bg;
	text-color:                     @fg;
}

window {    
	width:							50%;
	border-radius: 					8px;
}

prompt {
	enabled: 						true;
	padding: 						0.30% 1% 0% -0.5%;
	margin:                         0 0 0 0;
	background-color: 				@bg;
	text-color: 					@fg;
	font:							"CaskaydiaCove Nerd Font 12";
}

entry {
	background-color:               @bg;
	text-color:                     @fg;
	placeholder-color:              @fg;
	expand:                         true;
	horizontal-align:               0;
	placeholder:                    "Type to search";
	padding:                        0.10% 0% 0% 0%;
	margin:                         0.6% 0 0 0;
	blink:                          true;
}

inputbar {
	children: 						[ prompt, entry ];
	background-color:               @bg;
	text-color:                     @bg;
	expand:                         false;
	border:							0% 0% 0% 0%;
	border-radius:                  0px;
	border-color:					@ac;
	margin:                         0% 0% 0% 0%;
	padding:                        1.5%;
}

listview {
	background-color:               @bg;
	padding:                        10px;
	columns:                        5;
	lines:                          5;
	spacing:                        0%;
	cycle:                          false;
	dynamic:                        true;
	layout:                         vertical;
}

mainbox {
	background-color:               @bg;
	border:							0% 0% 0% 0%;
	border-radius:                  0% 0% 0% 0%;
	border-color:					@bg;
	children:                       [ inputbar, listview ];
	spacing:                       	0%;
	padding:                        1%;
}

element {
	background-color:               @bg;
	text-color:                     @fg;
	orientation:                    vertical;
	border-radius:                  6px;
	padding:                        2% 2% 2% 2%;
}

element-icon {
	size:                           40px;
	border:                         0px;
}

element-text {
	expand:                         true;
	horizontal-align:               0.5;
	vertical-align:                 0.5;
	margin:                         0.5% 0.5% -0.5% 0.5%;
}

element selected {
	background-color:               @ac;
	text-color:                     #000000;
}
