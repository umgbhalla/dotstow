# show open windows
super + period
    rofi -no-lazy-grab \
       -modi "drun" -show window \
       -columns 1 \
       -lines 8 \
       -line-padding 10 \
       -padding 20 \
       -width 27 \
       -font "JetBrains Mono 9" \
       -theme ~/.config/rofi/Iceburg.rasi \
       -terminal kitty

