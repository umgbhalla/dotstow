#!/bin/bash
# c=$(echo -en "shuffle\nstraight" | rofi -dmenu )

case $1 in
  "s") mpv --shuffle --no-video --ytdl-raw-options="cookies=~/cookies.txt" https://music.youtube.com/playlist\?list\=LM 
    ;;
  "8") mpv --no-video --ytdl-raw-options="cookies=~/cookies.txt" https://music.youtube.com/playlist\?list\=LM 
    ;;
  *) echo "error"
    ;;
esac

